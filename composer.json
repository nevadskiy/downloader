{
    "name": "nevadskiy/downloader",
    "description": "Download files using PHP and Curl",
    "license": "MIT",
    "keywords": ["download", "files", "downloader"],
    "authors": [
        {
            "name": "Nevadskiy",
            "email": "nevadskiy@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0|^8.0",
        "ext-curl": "*",
        "symfony/process": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "slim/slim": "^3.12"
    },
    "autoload": {
        "psr-4": {
            "Nevadskiy\\Downloader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nevadskiy\\Downloader\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "symfony/console": "Required to show downloader progress bar with symfony console commands"
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
